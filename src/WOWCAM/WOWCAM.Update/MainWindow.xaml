<Window x:Class="WOWCAM.Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOWCAM.Update"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Margin="0" Padding="0" Name="label">Status</Label>
        <ProgressBar Margin="0 3 0 0" Height="25" Name="progressBar"></ProgressBar>
        <Button Margin="0 10 0 0" Width="75" Height="25" HorizontalAlignment="Right" Name="button" Click="Button_Click">Update</Button>
    </StackPanel>
</Window>
